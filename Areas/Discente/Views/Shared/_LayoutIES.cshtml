@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Capítulo 03</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap-grid.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    @RenderSection("Styles", required: false)

    <style>
        /* retoques rápidos */
        .sidebar {
            min-height: calc(100vh - 64px - 90px); /* navbar + footer */
            padding-top: 1rem;
        }

            .sidebar .nav-link {
                border-radius: .5rem;
                padding: .6rem .8rem;
                transition: .15s ease;
            }

                .sidebar .nav-link:hover {
                    background: rgba(13,110,253,.1);
                    text-decoration: none;
                }

        .brand-logo {
            height: 44px;
            width: auto;
        }

        .content-card {
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.06);
            background: #fff;
        }

        footer img {
            object-fit: cover;
        }
    </style>
</head>

<body class="bg-light">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="brand-logo mr-2" src="~/images/DigitalDesk.jpg" alt="Logo" />
                <span>ASP.NET Core MVC</span>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topNav"
                    aria-controls="topNav" aria-expanded="false" aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">Instituições</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">Departamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Discente" asp-controller="Academico" asp-action="Index">Acadêmicos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTEÚDO -->
    <main class="container-fluid my-4">
        <div class="row">
            <!-- sidebar -->
            <aside class="col-12 col-md-3 col-lg-2 mb-3 mb-md-0">
                <nav class="sidebar">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action nav-link"
                           asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">
                            <img src="~/images/university.png" width="22" height="22" class="mr-2" alt="" />
                            Instituições
                        </a>
                        <a class="list-group-item list-group-item-action nav-link"
                           asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">
                            <img src="~/images/department.png" width="22" height="22" class="mr-2" alt="" />
                            Departamentos
                        </a>
                        <a class="list-group-item list-group-item-action nav-link"
                           asp-area="Discente" asp-controller="Academico" asp-action="Index">
                            <img src="~/images/academic.png" width="22" height="22" class="mr-2" alt="" />
                            Acadêmicos
                        </a>
                    </div>
                </nav>
            </aside>

            <!-- conteúdo principal -->
            <section class="col-12 col-md-9 col-lg-10">
                <div class="content-card p-4">
                    @RenderBody()
                </div>
            </section>
        </div>
    </main>

    <!-- RODAPÉ -->
    <footer class="mt-5">
        <div class="w-100" style="background-color:#e3f2fd;">
            <img src="~/images/background.jpg" class="w-100" style="height:100px;" alt="" />
            <div class="container py-3 d-flex align-items-center">
                <span class="text-muted">Everton Coimbra de Araújo</span>
                <span class="ml-auto text-secondary small">&copy; @DateTime.Now.Year</span>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.slim.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/jquery.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"
                asp-fallback-src="~/lib/popper.js/umd/popper.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>

    @RenderSection("ScriptPage", required: false)
</body>
</html>