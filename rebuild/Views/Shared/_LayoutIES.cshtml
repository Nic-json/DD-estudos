@* Views/Shared/_Layout.cshtml *@
@using Microsoft.AspNetCore.Identity
@using rebuild.Models.Infra
@inject SignInManager<UsuarioDaAplicacao> SignInManager
@inject UserManager<UsuarioDaAplicacao> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Capítulo 03</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap-grid.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    <!-- Font Awesome (ícones) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    @RenderSection("Styles", required: false)

    <style>
        /* Paleta e base */
        :root {
            --brand-primary: #0d6efd;
            --surface: #ffffff;
            --bg: #f6f8fb;
            --muted: #6c757d;
            --radius: 1rem;
            --shadow: 0 10px 28px rgba(16, 24, 40, .08);
        }

        html, body {
            height: 100%;
            background: var(--bg);
        }

        /* NAVBAR */
        .navbar-brand img {
            height: 36px;
            width: auto;
            margin-right: .5rem;
            margin-left: .5rem;
        }

        .navbar {
            box-shadow: 0 2px 18px rgba(13, 110, 253, .15);
        }

            .navbar .nav-link {
                font-weight: 500;
                opacity: .95;
            }

                .navbar .nav-link:hover,
                .navbar .nav-link:focus {
                    opacity: 1;
                }

        /* CONTEÚDO (cartão central) */
        .page-wrap {
            min-height: calc(100vh - 64px - 110px); /* altura útil descontando navbar e footer */
            display: flex;
            align-items: flex-start;
        }

        .content-card {
            width: 100%;
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
        }

            /* Imagens responsivas usadas na Home */
            .content-card img.img-fluid,
            .content-card img.img-thumbnail {
                max-width: 100%;
                height: auto;
            }

        /* RODAPÉ */
        .footer-bg {
            background: url('/images/background.jpg') center/cover no-repeat;
            min-height: 100px; /* ajuste a altura */
            border-top-left-radius: 1rem; /* combina com seu layout */
            border-top-right-radius: 1rem;
            box-shadow: 0 10px 28px rgba(16,24,40,.08);
        }

        /* Overlay para contraste do texto (opcional) */
        .footer-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0,0,0,.40), rgba(0,0,0,.20));
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

    </style>
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

        <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="brand-logo mr-2" src="~/images/DigitalDesk.jpg" alt="Logo" />
                <span>ASP.NET Core MVC</span>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topNav"
                    aria-controls="topNav" aria-expanded="false" aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav ml-auto"> 
                    <ul class="navbar-nav ml-auto">
                        @* ... seus itens (Instituições, Departamentos, Acadêmicos) ... *@

                        <li class="nav-item">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <span class="navbar-text mr-2">
                                    Olá @UserManager.GetUserName(User)
                                </span>

                                <form asp-area=""
                                      asp-controller="Infra"
                                      asp-action="Sair"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link p-0">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a class="nav-link"
                                   asp-area=""
                                   asp-controller="Infra"
                                   asp-action="Acessar">
                                    Informar usuário/senha
                                </a>
                            }
                        </li>
                    </ul>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">Instituições</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">Departamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Discente" asp-controller="Academico" asp-action="Index">Acadêmicos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Docente" asp-controller="Professor" asp-action="Index">Professor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Cadastros" asp-controller="Curso" asp-action="Index">Cursos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTEÚDO -->
    <main class="container-fluid my-4 flex-fill">
        <div class="row">

            <!-- conteúdo principal -->
            <section class="col-12">
                <div class="content-card p-4">
                    @RenderBody()
                </div>
            </section>
        </div>
    </main>

    <!-- RODAPÉ -->
    
    <footer class="mt-auto">
        <!-- mt-auto mantém o sticky footer -->
        <div class="position-relative footer-bg">
            <!-- overlay opcional -->
            <div class="footer-overlay"></div>

            <div class="container py-2 position-relative text-white d-flex align-items-center">
                <span class="ms-auto small">&copy; @DateTime.Now.Year</span>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"
                asp-fallback-src="~/lib/popper.js/umd/popper.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>

    @RenderSection("ScriptPage", required: false)
</body>
</html>