@{
    ViewData["Title"] = "Casa do Código - ASP.NET Core MVC";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<div class="container my-4">
    <!-- usa o mesmo container do site -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div id="heroCarousel" class="carousel slide" data-ride="carousel" data-interval="3500">
                <ol class="carousel-indicators">
                    <li data-target="#heroCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#heroCarousel" data-slide-to="1"></li>
                    <li data-target="#heroCarousel" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner rounded">
                    <div class="carousel-item active">
                        <img src="~/images/cat.jpg" class="d-block w-100" alt="Everton Coimbra de Araújo">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/cat.jpg" class="d-block w-100" alt="Casa do Código">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/cat.jpg" class="d-block w-100" alt="ASP.NET Core MVC">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Próximo</span>
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Mantém alinhado, sem “esticar” a imagem */
        #heroCarousel .carousel-item > img {
            width: 100%;
            height: 520px; /* ajuste a altura que preferir */
            object-fit: cover; /* corta com proporção correta */
            border-radius: .5rem; /* acompanha o card */
        }
    </style>
}