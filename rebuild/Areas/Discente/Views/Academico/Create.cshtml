@model Modelo.Discente.Academico
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Registrar Acadêmico";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">Registrando um novo acadêmico</h5>
    </div>

    <div class="card-body">
        <form asp-area="Discente"
              asp-controller="Academico"
              asp-action="Create"
              method="post"
              autocomplete="off"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="RegistroAcademico" class="form-label"></label>
                    <input asp-for="RegistroAcademico" class="form-control" autofocus />
                    <span asp-validation-for="RegistroAcademico" class="text-danger"></span>
                </div>

                <div class="col-md-5 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Nascimento" class="form-label"></label>
                    <input asp-for="Nascimento" type="date" class="form-control" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
            </div>

            <!-- Upload de foto -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Foto (opcional)</label>
                    <input type="file" name="foto" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                    <small class="form-text text-muted">JPG, PNG ou GIF (máx. 2 MB).</small>
                    <span class="text-danger">@Html.ValidationMessage("foto")</span>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-area="Discente" asp-controller="Academico" asp-action="Index"
                   class="btn btn-outline-secondary mr-2">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    Registrar Acadêmico
                </button>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-muted text-center">
        Preencha os dados e clique em <strong>Registrar Acadêmico</strong>.
    </div>
</div>

@section ScriptPage {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}