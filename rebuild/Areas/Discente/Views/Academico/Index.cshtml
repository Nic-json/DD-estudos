@model IEnumerable<Modelo.Discente.Academico>
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Acadêmicos Registrados";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success" role="alert">@msg</div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Acadêmicos Registrados</h5>

        <div class="d-flex align-items-center">
            <input id="dt-search" class="form-control form-control-sm me-2" style="min-width:220px"
                   placeholder="Pesquisar..." />
        </div>
    </div>

    <div class="card-body">
        <table id="tabela_academicos" class="table table-hover align-middle w-100">
            <thead class="table-light">
                <tr>
                    <th style="width:110px;">ID</th>
                    <th style="width:160px;">RA</th>
                    <th>Nome</th>
                    <th style="width:180px;">Nascimento</th>
                    <th style="width:220px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.AcademicoID) </td>
                        <td> @Html.DisplayFor(modelItem => item.RegistroAcademico) </td>
                        <td> @Html.DisplayFor(modelItem => item.Nome) </td>
                        <td> @Html.DisplayFor(modelItem => item.Nascimento) </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a class="btn btn-outline-primary"
                                   asp-area="Discente" asp-controller="Academico" asp-action="Edit"
                                   asp-route-id="@item.AcademicoID">Editar</a>
                                <a class="btn btn-outline-secondary"
                                   asp-area="Discente" asp-controller="Academico" asp-action="Details"
                                   asp-route-id="@item.AcademicoID">Detalhes</a>
                                <a class="btn btn-outline-danger"
                                   asp-area="Discente" asp-controller="Academico" asp-action="Delete"
                                   asp-route-id="@item.AcademicoID">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-success bg-gradient text-center">
        <a asp-area="Discente" asp-controller="Academico" asp-action="Create"
           class="btn btn-light">Criar um novo acadêmico</a>
    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>

    <script>
        $(function () {
            const dt = $('#tabela_academicos').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json' },
                dom: "t<'d-flex justify-content-between align-items-center mt-2'i p>",
                pageLength: 10,
                order: [[2, 'asc']],           // ordena por Nome
                columnDefs: [
                    { targets: [0,1,3,4], orderable: true }
                ],
                responsive: true
            });

            // busca do header
            $('#dt-search').on('input', function () {
                dt.search(this.value).draw();
            });
        });
    </script>
}