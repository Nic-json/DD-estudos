@model Modelo.Discente.Academico
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Excluir acadêmico";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white d-flex align-items-center">
        <h5 class="mb-0">Excluir acadêmico</h5>
    </div>

    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            Tem certeza de que deseja excluir este registro? Esta ação é <strong>irreversível</strong>.
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">RA</dt>
            <dd class="col-sm-9">@Model.RegistroAcademico</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Nascimento</dt>
            <dd class="col-sm-9">
                @(Model.Nascimento.HasValue? Model.Nascimento.Value.ToString("dd/MM/yyyy") : "-")
            </dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-end">
        <a asp-area="Discente" asp-controller="Academico" asp-action="Index"
           class="btn btn-outline-secondary mr-2">Cancelar</a>

        <form asp-area="Discente" asp-controller="Academico" asp-action="Delete" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AcademicoID" />
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
    </div>
</div>
