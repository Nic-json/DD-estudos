@model IEnumerable<Modelo.Cadastros.Instituicao>
@{
    Layout = "_LayoutIES";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success" role="alert">@msg</div>
}

<div class="card card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Instituições Registradas
    </div>

    <div class="card-body">
        <table id="tabela_instituicoes" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InstituicaoID</td>
                        <td>@item.Nome</td>
                        <td>@item.Endereco</td>
                        <td>
                            <!-- Se suas actions recebem (long id): -->
                            <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Edit" asp-route-id="@item.InstituicaoID">Editar</a> |
                            <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Details" asp-route-id="@item.InstituicaoID">Detalhes</a> |
                            <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Delete" asp-route-id="@item.InstituicaoID">Excluir</a>

                            @* Se suas actions recebem (long InstituicaoID), troque para:
                        <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Edit"    asp-route-InstituicaoID="@item.InstituicaoID">Editar</a> |
                        <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Details" asp-route-InstituicaoID="@item.InstituicaoID">Detalhes</a> |
                        <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Delete"  asp-route-InstituicaoID="@item.InstituicaoID">Excluir</a>
                        *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-success text-center">
        <a class="btn btn-success"
           asp-area="Cadastros" asp-controller="Instituicao" asp-action="Create">
            Criar uma nova instituição
        </a>
    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <script>
        $(function () {
            $('#tabela_instituicoes').DataTable();
        });
    </script>
}