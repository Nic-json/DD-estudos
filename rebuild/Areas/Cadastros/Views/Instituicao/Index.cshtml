@model IEnumerable<Modelo.Cadastros.Instituicao>
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Instituições Registradas";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success" role="alert">@msg</div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Instituições Registradas</h5>

        <div class="d-flex align-items-center">
            <input id="dt-search" class="form-control form-control-sm me-2" style="min-width:220px"
                   placeholder="Pesquisar..." />
        </div>
    </div>

    <div class="card-body">
        <table id="tabela_instituicoes" class="table table-hover align-middle w-100">
            <thead class="table-light">
                <tr>
                    <th style="width:100px;">Id</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th style="width:220px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InstituicaoID</td>
                        <td>@item.Nome</td>
                        <td>@item.Endereco</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Edit"
                                   asp-route-id="@item.InstituicaoID"
                                   class="btn btn-outline-primary">Editar</a>
                                <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Details"
                                   asp-route-id="@item.InstituicaoID"
                                   class="btn btn-sm btn-outline-info">Detalhes</a>
                                <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Delete"
                                   asp-route-id="@item.InstituicaoID"
                                   class="btn btn-outline-danger">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-success bg-gradient text-center">
        <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Create"
           class="btn btn-light">Criar uma nova instituição</a>
    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>

    <script>
        $(function () {
            const dt = $('#tabela_instituicoes').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json' },
                dom: "t<'d-flex justify-content-between align-items-center mt-2'i p>",
                pageLength: 10,
                searching: false,
                responsive: true,
                order: [[1, 'asc']] // ordena por Nome
            });

            // liga a busca do input no cabeçalho
            $('#dt-search').on('input', function () {
                dt.search(this.value).draw();
            });
        });
    </script>
}