@model Modelo.Cadastros.Instituicao
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Nova Instituição";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">Registrar uma nova instituição</h5>
    </div>

    <div class="card-body">
        <form asp-area="Cadastros" asp-controller="Instituicao" asp-action="Create" method="post" autocomplete="off">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" autofocus />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Endereco" class="form-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index"
                   class="btn btn-outline-secondary me-2">
                    Voltar para a listagem
                </a>

                <button type="submit" class="btn btn-primary">
                    Registrar Instituição
                </button>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-muted text-center">
        Preencha os dados acima e clique em <strong>Registrar Instituição</strong>.
    </div>
</div>

@section ScriptPage {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}