@model Modelo.Cadastros.Instituicao
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Excluir instituição";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white d-flex align-items-center">
        <h5 class="mb-0">Excluir instituição</h5>
    </div>

    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            Tem certeza de que deseja excluir este registro? Esta ação é <strong>irreversível</strong>.
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.InstituicaoID</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Endereço</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-end">
        <a asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index"
           class="btn btn-outline-secondary mr-2">Cancelar</a>

        <form asp-area="Cadastros" asp-controller="Instituicao" asp-action="Delete" method="post" class="m-0">
            @Html.AntiForgeryToken()

            <!-- Se o método POST Delete espera (long id): use "name=id" -->
            @* <input type="hidden" name="id" value="@Model.InstituicaoID" /> *@

            <!-- Se o método POST Delete recebe o modelo ou InstituicaoID: -->
            <input type="hidden" asp-for="InstituicaoID" />

            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
    </div>
</div>