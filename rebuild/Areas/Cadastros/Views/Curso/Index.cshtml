@model IEnumerable<Modelo.Cadastros.Curso>
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Cursos";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success" role="alert">@msg</div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Cursos Registrados</h5>

        <div class="d-flex align-items-center">
            <input id="dt-search" class="form-control form-control-sm mr-2" style="min-width:220px"
                   placeholder="Pesquisar..." />
        </div>
    </div>

    <div class="card-body">
        <table id="tabela_cursos" class="table table-hover table-sm w-100">
            <thead class="thead-light">
                <tr>
                    <th style="width:100px;">Id</th>
                    <th>Nome</th>
                    <th>Departamento</th>
                    <th class="text-right" style="width:240px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CursoID</td>
                        <td>@item.Nome</td>
                        <td>@item.Departamento?.Nome</td>
                        <td class="text-right">
                            <div class="btn-group btn-group-sm" role="group">
                                <a class="btn btn-outline-danger"
                                   asp-area="Cadastros" asp-controller="Curso" asp-action="Delete"
                                   asp-route-id="@item.CursoID">
                                    Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-success bg-gradient text-center">
        <a asp-area="Cadastros" asp-controller="Curso" asp-action="Create"
           class="btn btn-light">Criar um novo Curso</a>
    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>

    <script>
        $(function () {
            const dt = $('#tabela_cursos').DataTable({
                order: [[1, 'asc']],         // ordena por Nome
                pageLength: 10,
                searching: true,             // usaremos o input custom
                info: true,
                dom: "t<'d-flex justify-content-between align-items-center mt-2'i p>",
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json' }
            });

            // Busca pelo campo do header
            $('#dt-search').on('input', function () {
                dt.search(this.value).draw();
            });
        });
    </script>
}