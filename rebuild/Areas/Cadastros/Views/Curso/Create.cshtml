@model Modelo.Cadastros.Curso
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Novo Curso";

    // Garante que o asp-items nunca receba null
    var departamentos = ViewBag.Departamentos as IEnumerable<SelectListItem>
                        ?? Enumerable.Empty<SelectListItem>();
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">Cadastrar Curso</h5>
    </div>

    <div class="card-body">
        <form asp-area="Cadastros" asp-controller="Curso" asp-action="Create" method="post" autocomplete="off">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" autofocus />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DepartamentoID" class="form-label">Departamento</label>
                    <select asp-for="DepartamentoID"
                            class="form-control"
                            asp-items="departamentos">
                        <option value="">Selecione o Departamento</option>
                    </select>
                    <span asp-validation-for="DepartamentoID" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a class="btn btn-outline-secondary mr-2"
                   asp-area="Cadastros" asp-controller="Curso" asp-action="Index">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-muted text-center">
        Preencha os dados e clique em <strong>Salvar</strong>.
    </div>
</div>

@section ScriptPage {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}