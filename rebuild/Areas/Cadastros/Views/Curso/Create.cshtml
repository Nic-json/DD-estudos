@model Modelo.Cadastros.Curso
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Novo Curso";
}
<div class="card">
    <div class="card-header bg-secondary text-white">Cadastrar Curso</div>
    <div class="card-body">
        <form asp-area="Cadastros" asp-controller="Curso" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoID">Departamento</label>
                <select asp-for="DepartamentoID" class="form-control" asp-items="ViewBag.Departamentos">
                    <option value="">Selecione o Departamento</option>
                </select>
                <span asp-validation-for="DepartamentoID" class="text-danger"></span>
            </div>
            <div class="text-right">
                <button class="btn btn-primary">Salvar</button>
                <a class="btn btn-light" asp-area="Cadastros" asp-controller="Curso" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>
@section ScriptPage {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}