@model Modelo.Cadastros.Departamento
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Excluir departamento";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white d-flex align-items-center">
        <h5 class="mb-0">Excluir departamento</h5>
    </div>

    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            Tem certeza de que deseja excluir este registro? Esta ação é <strong>irreversível</strong>.
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.DepartamentoID</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Instituição</dt>
            <dd class="col-sm-9">@Model.Instituicao?.Nome</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-end">
        <a class="btn btn-outline-secondary mr-2"
           asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">
            Cancelar
        </a>

        <form asp-area="Cadastros"
              asp-controller="Departamento"
              asp-action="Delete"
              asp-route-id="@Model.DepartamentoID"
              method="post"
              class="m-0">
            @Html.AntiForgeryToken()

            <!-- Caso seu POST receba o modelo, mantenha também o hidden: -->
            <input type="hidden" asp-for="DepartamentoID" />

            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
    </div>
</div>
