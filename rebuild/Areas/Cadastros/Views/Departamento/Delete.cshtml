@model Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card">
    <div class="card-header text-white bg-secondary text-center h4">
        Remover departamento
    </div>

    <div class="card-body">
        <p class="text-danger mb-3">
            Tem certeza que deseja excluir este departamento?
        </p>

        <!-- Card de detalhes do Departamento -->
        <partial name="~/Views/Departamento/_PartialDetailsContentCard.cshtml" model="Model" />

        @* (Opcional) também mostrar a Instituição do departamento:
           <partial name="~/Views/Instituicao/_PartialDetailsContentCard.cshtml" model="Model.Instituicao" />
        *@
    </div>

    <div class="card-footer bg-info text-center text-white">
        <form asp-action="Delete" asp-route-id="@Model.DepartamentoID" method="post" class="d-inline">
            @* O Form Tag Helper injeta o antiforgery token automaticamente *@
            <input type="hidden" asp-for="DepartamentoID" />
            <button type="submit" class="btn btn-danger">Remover</button>
        </form>
        <a asp-action="Index" class="btn btn-light ms-2">Cancelar</a>
    </div>
</div>
