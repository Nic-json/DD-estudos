@model Modelo.Cadastros.Departamento
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Editar departamento";
}

@section Styles {
    <!-- Carregue somente se o layout ainda não estiver incluindo o Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white text-center h5">
        Alterando um departamento existente
    </div>

    <form asp-action="Edit" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="DepartamentoID" />

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Nome -->
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-tag"></i>
                    </span>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Instituição -->
            <div class="mb-1">
                <label asp-for="InstituicaoID" class="form-label">Instituição</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-university"></i>
                    </span>
                    <select asp-for="InstituicaoID" class="form-control" asp-items="ViewBag.Instituicao">
                        <option value="">Selecione a Instituição</option>
                    </select>
                </div>
                <span asp-validation-for="InstituicaoID" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a class="btn btn-outline-secondary"
               asp-action="Index">
                Voltar
            </a>
            <button type="submit" class="btn btn-primary">
                Salvar
            </button>
        </div>
    </form>
</div>

@section ScriptPage {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}