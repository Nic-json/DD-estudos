@model IEnumerable<Modelo.Cadastros.Departamento>

@{
    Layout = "/Views/Shared/_LayoutIES.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Departamentos Registrados</h5>

        <div class="d-flex align-items-center">
            <input id="dt-search" class="form-control form-control-sm me-2" style="min-width:220px"
                   placeholder="Pesquisar..." />
        </div>
    </div>

    <div class="card-body">
        <table id="tabela_Departamento" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Instituicao.Nome)</th>
                    <th style="width: 160px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(_ => item.Nome)</td>
                        <td>@(item.Instituicao?.Nome ?? "-")</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Edit" asp-route-id="@item.DepartamentoID">Editar</a>
                            <a class="btn btn-sm btn-outline-info"
                               asp-action="Details" asp-route-id="@item.DepartamentoID">Detalhes</a>
                            <a class="btn btn-sm btn-outline-danger"
                               asp-action="Delete" asp-route-id="@item.DepartamentoID">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-success text-center">
        <a class="btn btn-light"
           asp-action="Create">Criar um novo departamento</a>
    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <script>
        $(function () {
          $('#tabela_Departamento').DataTable({
            order: [[1, "asc"]],
            pageLength: 10,
            searching: false,
            language: {
              url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
            }
          });
        });
    </script>
}