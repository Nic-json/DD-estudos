@model Modelo.Docente.Professor
@using Modelo.Cadastros              @* <-- ajuste se o Curso/CursoProfessor estiverem noutro namespace *@
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Detalhes do Professor";
    var cursos = Model.CursosProfessores?
                   .Where(cp => cp.Curso != null)
                   .Select(cp => cp.Curso!)      // ! porque já filtramos null
                   .OrderBy(c => c.Nome)
                ?? Enumerable.Empty<Curso>();

}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card shadow-sm">

    <!-- HEADER: azul, com ícone e botões à direita com espaçamento -->
    <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between py-3">
        <div class="d-flex align-items-center">
            <i class="fas fa-chalkboard-teacher mr-2"></i>
            <h5 class="mb-0">Detalhes do professor</h5>
        </div>

        <div class="btn-group btn-group-sm ml-4" role="group">
            <a class="btn btn-light"
               asp-area="Docente" asp-controller="Professor" asp-action="Edit"
               asp-route-id="@Model.ProfessorID">
                Editar
            </a>
            <a class="btn btn-outline-light"
               asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">
                Vincular a curso
            </a>
            <a class="btn btn-outline-light"
               asp-area="Docente" asp-controller="Professor" asp-action="Index">
                Voltar
            </a>
        </div>
    </div>

    <!-- BODY -->
    <div class="card-body">

        <!-- Campos do professor (usa o partial padronizado com ícones) -->
        <partial name="~/Views/Shared/_PartialDetailsContentCard.cshtml" model="Model" />

        <!-- Se houver cursos vinculados, mostra a seção -->
        @if (Model.CursosProfessores != null && Model.CursosProfessores.Any())
        {
            <hr class="my-4" />
            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-book-open mr-2 text-muted"></i>
                <h6 class="mb-0">Cursos deste professor</h6>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-sm w-100">
                    <thead class="thead-light">
                        <tr>
                            <th>Nome</th>
                            <th class="text-right" style="width:180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in cursos)
                        {
                            <tr>
                                <td>@c.Nome</td>
                                <td class="text-right">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-outline-secondary"
                                           asp-area="Cadastros" asp-controller="Curso" asp-action="Details"
                                           asp-route-id="@c.CursoID">
                                            <i class="fas fa-eye mr-1"></i> Detalhes
                                        </a>
                                        <a class="btn btn-outline-primary"
                                           asp-area="Cadastros" asp-controller="Curso" asp-action="Edit"
                                           asp-route-id="@c.CursoID">
                                            <i class="fas fa-edit mr-1"></i> Editar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning mb-0 mt-3">
                Nenhum curso vinculado a este professor.
            </div>
        }
    </div>

    <!-- FOOTER -->
    <div class="card-footer bg-light text-muted text-center">
        Consulte as informações e utilize os botões de ação para editar, vincular a curso ou voltar.
    </div>
</div>