@model IEnumerable<Modelo.Docente.Professor>
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Professores";
}

<div class="card">
    <div class="card-header bg-primary text-white d-flex align-items-center">
        <div class="h5 mb-0">Professores</div>

        <div class="ml-auto">
            <a class="btn btn-light btn-sm mr-2"
               asp-area="Docente" asp-controller="Professor" asp-action="Create">
                + Novo Professor
            </a>
            <a class="btn btn-outline-light btn-sm"
               asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">
                Vincular a curso
            </a>
        </div>
    </div>

    <div class="card-body">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th style="width:220px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ProfessorID</td>
                        <td>@p.Nome</td>
                        <td class="text-right">
                            <a class="btn btn-outline-secondary btn-sm"
                               asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">
                                Vincular a curso
                            </a>
                            <a class="btn btn-outline-primary btn-sm"
                               asp-area="Docente" asp-controller="Professor" asp-action="Create">
                                Novo
                            </a>
                            <a class="btn btn-sm btn-outline-primary"
                               asp-area="Docente" asp-controller="Professor" asp-action="Details"
                               asp-route-id="@p.ProfessorID">Detalhes</a>

                        </td>
                    </tr>
                }
            </tbody>
            <div class="card-footer text-right">
                <a class="btn btn-primary"
                   asp-area="Docente" asp-controller="Professor" asp-action="Create">
                    + Novo Professor
                </a>
                <a class="btn btn-outline-secondary"
                   asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">
                    Vincular a curso
                </a>
            </div>
        </table>
    </div>
</div>