@model IEnumerable<Modelo.Docente.Professor>
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Professores";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success" role="alert">@msg</div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Professores Registrados</h5>

        <div class="d-flex align-items-center">
            <input id="dt-search" class="form-control form-control-sm me-2" style="min-width:220px"
                   placeholder="Pesquisar..." />
        </div>
    </div>

    <div class="card-body">
        <table id="tabela_professores" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th style="width: 260px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.ProfessorID</td> <!-- se quiser mostrar o ID -->
                        <td class="text-right">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-area="Docente" asp-controller="Professor" asp-action="Edit"
                               asp-route-id="@item.ProfessorID">Editar</a>
                            <a class="btn btn-sm btn-outline-info"
                               asp-area="Docente" asp-controller="Professor" asp-action="Details"
                               asp-route-id="@item.ProfessorID">Detalhes</a>
                            <a class="btn btn-sm btn-outline-danger"
                               asp-area="Docente" asp-controller="Professor" asp-action="Delete"
                               asp-route-id="@item.ProfessorID">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer text-right">
        <!-- Se quiser manter um botão global, estes são exemplos.
             O "Editar" global não faz sentido sem seleção, então mantive estes dois: -->
        <a class="btn btn-outline-secondary"
           asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">
            Vincular a curso
        </a>
     <a class="btn btn-primary"
           asp-area="Docente" asp-controller="Professor" asp-action="Create">
            + Novo Professor
        </a>
    </div>
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>

    <script>
        $(function () {
            const dt = $('#tabela_professores').DataTable({
                order: [[1, 'asc']],
                pageLength: 10,
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json' }
            });

            // hook do campo de busca no header
            $('#dt-search').on('input', function () {
                dt.search(this.value).draw();
            });
        });
    </script>
}