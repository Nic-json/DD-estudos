@model Modelo.Docente.Professor
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Novo Professor";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">Cadastrar Professor</h5>
    </div>

    <div class="card-body">
        <form asp-area="Docente"
              asp-controller="Professor"
              asp-action="Create"
              method="post"
              autocomplete="off">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" autofocus />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a class="btn btn-outline-secondary mr-2"
                   asp-area="Docente" asp-controller="Professor" asp-action="Index">
                    Cancelar
                </a>
                <button class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-muted text-center">
        Informe o nome do professor e clique em <strong>Salvar</strong>.
    </div>
</div>

@section ScriptPage {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}