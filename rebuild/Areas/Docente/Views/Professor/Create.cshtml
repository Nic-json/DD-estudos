@model Modelo.Docente.Professor
@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Novo Professor";
}

<form asp-area="Docente" asp-controller="Professor" asp-action="Create" method="post" autocomplete="off">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Salvar</button>
    <a asp-area="Docente" asp-controller="Professor" asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section ScriptPage {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
